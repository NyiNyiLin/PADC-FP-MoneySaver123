<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.IncomeMainFrgment"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mdtp_white"
        app:tabMode="fixed"
        app:tabTextColor="@color/primary"
        app:tabSelectedTextColor="@color/primary_dark"
        app:tabIndicatorColor="@color/primary"
        app:tabTextAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Subtitle"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_income"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
